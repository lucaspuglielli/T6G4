<!DOCTYPE html>
<html lang="en">

<%- include('includes/head', {title: "Cadastro"}) %>

<body>
    <%- include('includes/header') %>

        <div class="container">
            <h2>CADASTRE-SE</h2>
            <form action="/cadastro" id="cadastro_form">
                <div class="form-group">
                    <label for="name"> Nome Completo </label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="John Doe">
                </div>
                <div class="form-group">
                    <label for="email"> E-mail </label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="usuario@mail.com">
                </div>
                <div class="form-group">
                    <label for="email"> CPF </label>
                    <input type="number" class="form-control" id="cpf" name="cpf" placeholder="123.456.789-12">
                </div>
                <div class="form-group">
                    <label for="email"> Data de Nascimento </label>
                    <input type="date" class="form-control" id="birthdate" name="birthdate" placeholder="dd/mm/aaaa">
                </div>
                <div class="form-group">
                    <label for="email"> Telefone </label>
                    <input type="number" class="form-control" id="phone" name="phone" placeholder="(99)99999-9999">
                </div>
                <div class="form-group">
                    <label for="email"> Senha </label>
                    <input type="password" class="form-control" id="password" name="password"
                        placeholder="Defina uma senha">
                </div>
                <div class="form-group">
                    <button type="submit" value="submit" class="buttonnewsletterfooter">Cadastrar</button>
                </div>
            </form>
        </div>

    <%- include('includes/footer') %> 
    <%- include('includes/scripts') %> 

</body>

</html>